<div class = "custom-title text-center">
	<h1 class="custom-font3">Sign In</h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs my-wrapper2 span4 offset5 text-center">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.button :submit, "Sign In",class: "btn btn-warning"  %>
    <br><h3>Not a member?</h3>
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-warning"  %>
  	</div>
<% end %>

